html
  head
    title  Admin Dashboard 
    style.
      body{
      margin: 0px;
      border: 0px;
      }
      #header{
      width: 100%;
      height: 120px;
      background: black;
      color: white;
      }
      #sidebar{
      width: 300px;
      height: 400px;
      float: left;
      }
      #data{
      height: 700px;
      }
      #adminLogo{
      height:100px;
      margin-top:50px;
      }
      ul li{
      padding: 20px;
      border-bottom: 2px solid grey;
      }
      ul li:hover{
      background: #e67e22;
      color: white;
      }
      .username input
      {
      width:150px;
      font-size:15px;
      height:50px;
      outline:none;
      }
      input
      {
      outline:none;
      height:50px;
      width:150px;
      background: white;
      border:none;
      color: black;
      font-family: Helvetica;
      font-size:25px;
      }
      .form
      {
      float:left;
      margin:auto;
      }
      #container
      {
      display: flex;
      align-items: center;
      justify-content: center;
      }
      a
      {
      text-decoration: none;
      color:white;
      font-family:Helvetica;
      }
      #ban
      {
      background-color: red;
      color:white;
      }
      p{
        color:white;
        text-align:center;
        font-family:Helvetica;
        font-size:30px;
      }
  body(style='background-color:#F26122;')
    #headbar
      center
        a(href="/dashboard")
          img#adminLogo(src='http://www.iconarchive.com/download/i7734/hopstarter/sleek-xp-basic/Administrator.ico', alt='adminLogo')
        br
        p
          font(color='white')
            font(size='5')
              font(face='Helvetica')
                | Lapchat Administrative Panel
    ul(style='list-style-type:none')
      a(href='/adminlist')
        li View Users
    #container
      form(action='/admin', method='POST')
        input(type='text', name='username', placeholder='Username')
        input(type='submit', value='BAN' id='ban')
    #container
      form(action='/makeadmin', method='POST')
        input(type='text', name='adminname', placeholder='Username')
        input(type='submit', value='ADMIN' id='ban')
    p.
      !{mess}