doctype html
html
  head
    meta(charset='UTF-8')
    title Lapchat Admin Panel
    link(rel='stylesheet prefetch', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css')
    link(rel='stylesheet prefetch', href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.1.0/css/font-awesome.min.css')
    link(rel='stylesheet prefetch', href='https://s3-us-west-2.amazonaws.com/s.cdpn.io/4579/bootstrap-table.css')
    link(rel='stylesheet', href='stylesheets/admin.css')
  body
    body
      #wrapper
        nav.navbar.navbar-inverse.navbar-fixed-top(role='navigation')
          .navbar-header
            button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-hamburger-delicious')
              span.sr-only Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand Lapchat Admin Panel
          .collapse.navbar-collapse.navbar-hamburger-delicious
            ul.nav.navbar-nav.side-nav.fadeInLeft
              li.dashboard
                a(href='/admin')
                  i.fa.fa-lg.fa-dashboard
                  | Admin Dashoard
              li.active.docs
                a(href='/adminlist')
                  i.fa.fa-lg.fa-folder-open
                  | User List
            ul.nav.navbar-nav.navbar-right.navbar-user
              li.dropdown.user-dropdown
                a.dropdown-toggle(href='#', data-toggle='dropdown')
                  span.js-user-name Hey, #{adminname}
        #page-wrapper
          .container-fluid
            .row
              .col-lg-12.col-md-12.col-sm-12
                h2 User List
                hr
            .row
              .col-lg-12.col-md-12.col-xs-12.js-content
                .docs-table
                  table(data-toggle='table', data-show-toggle='true', data-show-columns='true', data-search='true', data-striped='true')
                    thead
                      tr
                        th(data-field='First Name') First Name
                        th(data-field='Last Name') Last Name
                        th(data-field='Name') Username
                        th(data-field='Description') Email
                        th(data-field='Tags') Friends
                        th(data-field='LastViewed') Role
                        th(data-field='Expiration') Account Created
                    tbody
                      each student, i in studentlist
                        tr
                          td #{student.firstname}
                          td #{student.lastname}
                          td #{student.username}
                          td #{student.email}
                          td #{student.friends.length}
                          td #{student.role}
                          td #{student.date}
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js')
    script(src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/4579/bootstrap.min.js')
    script(src='https://s3-us-west-2.amazonaws.com/s.cdpn.io/4579/bootstrap-table.js')
